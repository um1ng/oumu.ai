@tailwind base;
@tailwind components;
@tailwind utilities;

/* Material Icons基础样式 */
.material-symbols-outlined {
  font-family: 'Material Symbols Outlined';
  font-weight: normal;
  font-style: normal;
  font-size: 24px;
  line-height: 1;
  letter-spacing: normal;
  text-transform: none;
  display: inline-block;
  white-space: nowrap;
  word-wrap: normal;
  direction: ltr;
  -webkit-font-smoothing: antialiased;
  font-variation-settings:
    "FILL" 0,
    "wght" 400,
    "GRAD" 0,
    "opsz" 24;
}

/* 基础样式 */
@layer base {
  * {
    border-color: var(--border-primary);
  }

  /* 设计令牌：统一管理光暗主题 */
  :root {
    /* 品牌色（绿色系） */
    --brand-50: #f0fdf4;
    --brand-100: #dcfce7;
    --brand-200: #bbf7d0;
    --brand-300: #86efac;
    --brand-400: #4ade80;
    --brand-500: #22c55e;
    --brand-600: #166534;
    --brand-700: #15803d;
    --brand-800: #166534;
    --brand-900: #14532d;

    /* 中性色 */
    --neutral-50: #f9fafb;
    --neutral-100: #f3f4f6;
    --neutral-200: #e5e7eb;
    --neutral-300: #d1d5db;
    --neutral-400: #9ca3af;
    --neutral-500: #6b7280;
    --neutral-600: #4b5563;
    --neutral-700: #374151;
    --neutral-800: #1f2937;
    --neutral-900: #111827;

    /* 语义色别名 */
    --color-primary: var(--brand-600);
    --color-primary-hover: var(--brand-700);
    --color-primary-active: var(--brand-800);
    --color-success: var(--brand-500);
    --color-info: var(--brand-500);
    --color-warning: #f59e0b;
    --color-error: #ef4444;

    /* 状态语义令牌 */
    --state-success-text: var(--color-success);
    --state-success-surface: rgba(34, 197, 94, 0.12);
    --state-success-border: rgba(34, 197, 94, 0.35);
    --state-success-strong: var(--brand-700);

    --state-warning-text: var(--color-warning);
    --state-warning-surface: rgba(245, 158, 11, 0.18);
    --state-warning-border: rgba(245, 158, 11, 0.35);
    --state-warning-strong: #b45309;

    --state-error-text: var(--color-error);
    --state-error-surface: rgba(239, 68, 68, 0.18);
    --state-error-border: rgba(239, 68, 68, 0.4);
    --state-error-strong: #b91c1c;

    --state-info-text: var(--color-info);
    --state-info-surface: rgba(132, 204, 22, 0.16);
    --state-info-border: rgba(132, 204, 22, 0.35);
    --state-info-strong: var(--brand-700);

    /* 状态色阶 */
    --success-50: var(--brand-50);
    --success-100: var(--brand-100);
    --success-200: var(--brand-200);
    --success-300: var(--brand-300);
    --success-400: var(--brand-400);
    --success-500: var(--brand-500);
    --success-600: var(--brand-600);
    --success-700: var(--brand-700);
    --success-800: var(--brand-800);
    --success-900: var(--brand-900);

    --warning-50: #fffbeb;
    --warning-100: #fef3c7;
    --warning-200: #fde68a;
    --warning-300: #fcd34d;
    --warning-400: #fbbf24;
    --warning-500: #f97316;
    --warning-600: #ea580c;
    --warning-700: #c2410c;
    --warning-800: #9a3412;
    --warning-900: #7c2d12;

    --error-50: #fef2f2;
    --error-100: #fee2e2;
    --error-200: #fecaca;
    --error-300: #fca5a5;
    --error-400: #f87171;
    --error-500: #ef4444;
    --error-600: #dc2626;
    --error-700: #b91c1c;
    --error-800: #991b1b;
    --error-900: #7f1d1d;

    /* 文本色 */
    --text-primary: var(--neutral-900);
    --text-secondary: var(--neutral-600);
    --text-tertiary: var(--neutral-500);
    --text-muted: var(--neutral-500); /* Improved from #9ca3af to #6b7280 for better contrast */
    --text-inverse: #ffffff;

    /* 表面与背景 */
    --surface-base: #fff7e3;
    --surface-card: #ffffff;
    --surface-muted: var(--neutral-50);
    --surface-inverse: var(--neutral-900);

    --bg-primary: var(--surface-base);
    --bg-secondary: var(--surface-card);
    --bg-tertiary: var(--surface-muted);
    --bg-surface: var(--surface-card);
    --bg-inverse: var(--surface-inverse);

    /* 圆角令牌 */
    --radius-xs: 0.375rem;
    --radius-sm: 0.5rem;
    --radius-md: 0.75rem;
    --radius-lg: 1rem;
    --radius-xl: 1.25rem;
    --radius-2xl: 1.5rem;
    --radius-pill: 9999px;

    --radius-card: var(--radius-2xl);
    --radius-card-large: 1.75rem;
    --radius-control: var(--radius-lg);

    /* 间距令牌 */
    --space-xs: 0.25rem;
    --space-sm: 0.5rem;
    --space-md: 1rem;
    --space-lg: 1.5rem;
    --space-xl: 2rem;

    --space-card-padding-sm: var(--space-md);
    --space-card-padding-lg: var(--space-lg);
    --space-section-gap: var(--space-xl);

    /* 边框系统 */
    --border-default: var(--neutral-200);
    --border-strong: var(--neutral-300);
    --border-subtle: var(--neutral-100);
    --border-focus: var(--color-primary);
    --border-error: var(--color-error);

    --border-primary: var(--border-default);
    --border-secondary: var(--border-strong);
    --border-muted: var(--border-subtle);

    /* 阴影系统 */
    --shadow-sm: 0 1px 2px 0 rgb(15 23 42 / 0.05);
    --shadow-md: 0 4px 6px -1px rgb(15 23 42 / 0.08);
    --shadow-lg: 0 18px 36px -20px rgb(15 23 42 / 0.12);
    --shadow-xl: 0 28px 64px -32px rgb(15 23 42 / 0.16);

    /* 按钮令牌 */
    --button-fill: var(--color-primary);
    --button-fill-hover: var(--color-primary-hover);
    --button-fill-active: var(--color-primary-active);
    --button-text-color: var(--text-inverse);
    --button-shadow-color: var(--brand-700);

    /* Radix UI 兼容变量 */
    --primary: var(--color-primary);
    --primary-foreground: var(--text-inverse);
    --background: var(--bg-primary);
    --foreground: var(--text-primary);
    --card: var(--surface-card);
    --card-foreground: var(--text-primary);
    --popover: var(--surface-card);
    --popover-foreground: var(--text-primary);
    --muted: var(--surface-muted);
    --muted-foreground: var(--text-muted);
    --accent: var(--surface-muted);
    --accent-foreground: var(--text-primary);
    --destructive: var(--state-error-strong);
    --destructive-foreground: var(--text-inverse);
    --border: var(--border-default);
    --input: var(--border-default);
    --ring: var(--color-primary);

    /* 播放器 */
    --player-accent-color: var(--color-primary);
    --player-highlight-bg: rgba(132, 204, 22, 0.12);
    --player-card-bg: var(--surface-card);
    --player-card-border: var(--border-primary);
    --player-card-shadow: rgba(15, 23, 42, 0.1);
    --player-track-color: rgba(132, 204, 22, 0.18);
    --player-thumb-fill: var(--surface-card);
    --player-thumb-border: rgba(132, 204, 22, 0.45);
    --player-hover-indicator: rgba(132, 204, 22, 0.3);
    --player-tooltip-text: var(--text-primary);

    /* 设置面板 */
    --settings-shadow-color: rgba(229, 231, 235, 0.95);
    --settings-divider-color: rgba(229, 231, 235, 0.9);
    --settings-muted-color: rgba(107, 114, 128, 0.7);
    --settings-border-color: rgba(229, 231, 235, 0.95);

    /* 滚动条样式变量 */
    --scrollbar-width: 6px;
    --scrollbar-track-color: transparent;
    --scrollbar-thumb-color: rgba(148, 163, 184, 0.4);
    --scrollbar-thumb-hover-color: rgba(148, 163, 184, 0.6);
    --scrollbar-border-radius: 9999px;

    /* 其他辅助变量 */
    --upload-bg-color: rgba(132, 204, 22, 0.08);
    --inactive-icon-color: #a5d6a7;
    --stats-text-color: #4a4a4a;
    --secondary-text-color: var(--text-secondary);
    --highlight-bg: rgba(132, 204, 22, 0.1);
    --nav-container-background: rgba(255, 255, 255, 0.85);

    /* 按钮样式 */
    --button-fill: var(--color-primary);
    --button-fill-hover: var(--color-primary-hover);
    --button-fill-active: var(--color-primary-active);
    --button-text: var(--text-inverse);
    --button-border: var(--border-default);

    --primary-color: var(--color-primary);
    --primary-hover: var(--color-primary-hover);
    --primary-active: var(--color-primary-active);

    --button-color: var(--button-fill);
    --button-hover-color: var(--button-fill-hover);

    --background-color: var(--bg-primary);
    --background-light: var(--surface-base);
    --text-color: var(--text-primary);
    --card-background: var(--surface-card);
    --card-background-color: var(--surface-card);
    --border-color: var(--border-primary);
  }

  .dark {
    --text-primary: #f8fafc;
    --text-secondary: #cbd5e1;
    --text-tertiary: #94a3b8;
    --text-muted: #cbd5e1; /* Improved from #94a3b8 to #cbd5e1 for better contrast */

    --surface-base: #0f172a;
    --surface-card: #1e293b;
    --surface-muted: #1e3432;
    --surface-inverse: #f8fafc;

    --border-default: #334155;
    --border-strong: #475569;
    --border-subtle: #1e293b;
    --border-focus: var(--color-primary);
    --border-error: var(--color-error);

    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.25);
    --shadow-md: 0 6px 12px -2px rgb(0 0 0 / 0.35);
    --shadow-lg: 0 20px 40px -24px rgb(0 0 0 / 0.45);
    --shadow-xl: 0 32px 80px -40px rgb(0 0 0 / 0.5);

    --button-shadow-color: var(--brand-900);

    --state-success-surface: rgba(34, 197, 94, 0.2);
    --state-success-border: rgba(34, 197, 94, 0.5);
    --state-success-strong: var(--brand-500);

    --state-warning-surface: rgba(245, 158, 11, 0.22);
    --state-warning-border: rgba(245, 158, 11, 0.45);
    --state-warning-strong: #facc15;

    --state-error-surface: rgba(239, 68, 68, 0.22);
    --state-error-border: rgba(239, 68, 68, 0.5);
    --state-error-strong: #f87171;

    --state-info-surface: rgba(132, 204, 22, 0.24);
    --state-info-border: rgba(132, 204, 22, 0.55);
    --state-info-strong: var(--brand-500);

    --player-highlight-bg: rgba(132, 204, 22, 0.18);
    --player-card-bg: var(--surface-card);
    --player-card-border: rgba(255, 255, 255, 0.12);
    --player-card-shadow: rgba(0, 0, 0, 0.35);
    --player-track-color: rgba(132, 204, 22, 0.25);
    --player-thumb-fill: var(--surface-base);
    --player-thumb-border: rgba(132, 204, 22, 0.6);
    --player-hover-indicator: rgba(132, 204, 22, 0.35);
    --player-tooltip-text: var(--text-primary);

    --settings-shadow-color: rgba(15, 23, 42, 0.55);
    --settings-divider-color: rgba(75, 85, 99, 0.6);
    --settings-muted-color: rgba(226, 232, 240, 0.65);
    --settings-border-color: rgba(148, 163, 184, 0.35);

    --upload-bg-color: transparent;
    --inactive-icon-color: var(--text-muted);
    --stats-text-color: #d1d5db;
    --secondary-text-color: var(--text-secondary);
    --highlight-bg: rgba(132, 204, 22, 0.18);
    --nav-container-background: rgba(30, 41, 59, 0.8);

    --background-color: var(--bg-primary);
    --text-color: var(--text-primary);
    --card-background: var(--surface-card);
    --card-background-color: var(--surface-card);
    --border-color: var(--border-primary);
    --background-dark: var(--bg-primary);

    /* 暗色模式滚动条样式 */
    --scrollbar-thumb-color: rgba(148, 163, 184, 0.5);
    --scrollbar-thumb-hover-color: rgba(148, 163, 184, 0.7);
  }

  /* 状态色工具类 */
  .text-success {
    color: var(--state-success-text);
  }
  .text-warning {
    color: var(--state-warning-text);
  }
  .text-error {
    color: var(--state-error-text);
  }
  .text-info {
    color: var(--state-info-text);
  }

  .bg-success {
    background-color: var(--state-success-text);
  }
  .bg-warning {
    background-color: var(--state-warning-text);
  }
  .bg-error {
    background-color: var(--state-error-text);
  }
  .bg-info {
    background-color: var(--state-info-text);
  }

  .bg-success\/10 {
    background-color: var(--state-success-surface);
  }
  .bg-warning\/10 {
    background-color: var(--state-warning-surface);
  }
  .bg-error\/10 {
    background-color: var(--state-error-surface);
  }
  .bg-info\/10 {
    background-color: var(--state-info-surface);
  }

  .border-success {
    border-color: var(--state-success-border);
  }
  .border-warning {
    border-color: var(--state-warning-border);
  }
  .border-error {
    border-color: var(--state-error-border);
  }
  .border-info {
    border-color: var(--state-info-border);
  }

  body {
    @apply min-h-screen font-sans;
    background-color: var(--background-color);
    color: var(--text-color);
  }
}

/* 自定义样式类 */
@layer components {
  /* 统计卡片样式 */
  .stats-card {
    background-color: var(--card-background-color);
    border: 2px solid var(--border-primary);
    border-bottom-width: 4px;
    border-radius: var(--radius-card-large);
    box-shadow: var(--shadow-md);
    padding: var(--space-card-padding-lg);
    transition: transform 0.2s ease;
  }

  .stats-card:hover {
    transform: translateY(-0.25rem);
  }

  .dark .stats-card {
    border-color: var(--border-color);
  }

  /* 文件卡片样式 */
  .file-card {
    background-color: var(--card-background-color);
    border: 2px solid var(--border-primary);
    border-bottom-width: 4px;
    border-radius: var(--radius-card);
    padding: var(--space-card-padding-sm);
    transition: transform 0.2s ease;
  }

  .file-card:hover {
    transform: translateY(-0.25rem);
  }

  .dark .file-card {
    border-color: var(--border-color);
  }

  .file-card-actions {
    @apply flex items-center gap-2;
  }

  .file-card-action {
    @apply flex h-12 w-12 items-center justify-center rounded-full text-white shadow-md transition-colors duration-150 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[var(--primary-color)] focus-visible:ring-offset-2 focus-visible:ring-offset-[var(--card-background-color)];
    background-color: var(--state-info-text);
  }

  .file-card-action .material-symbols-outlined {
    @apply text-2xl;
  }

  .file-card-action--play:hover,
  .file-card-action--play.is-active {
    background-color: var(--state-info-strong);
  }

  .file-card-action--retry {
    background-color: var(--state-warning-text);
  }

  .file-card-action--retry:hover {
    background-color: var(--state-warning-strong);
  }

  .file-card-action--delete {
    background-color: transparent;
    box-shadow: none;
    color: var(--text-muted);
    opacity: 0;
    pointer-events: none;
    transition:
      opacity 150ms ease,
      background-color 150ms ease,
      color 150ms ease;
  }

  .file-card-actions:hover .file-card-action--delete,
  .file-card-action--delete:focus-visible {
    opacity: 1;
    pointer-events: auto;
  }

  .file-card-action--delete:hover {
    background-color: var(--state-error-surface);
    color: var(--state-error-strong);
  }

  /* 上传区域样式 */
  .upload-area {
    @apply flex flex-col items-center justify-center gap-4 rounded-xl border-2 border-dashed px-6 py-16 text-center;
    border-color: var(--state-success-border);
    background-color: var(--upload-bg-color);
    border-radius: var(--radius-card);
  }

  .dark .upload-area {
    @apply rounded-2xl border-2 border-dashed px-6 py-16 text-center;
    border-color: var(--state-success-border);
    background-color: transparent;
  }

  /* 按钮样式 */
  .btn-primary {
    @apply flex items-center justify-center rounded-xl h-14 px-8 text-lg font-bold uppercase tracking-wider transition-all;
    background-color: var(--button-color);
    color: var(--button-text-color);
    box-shadow: 0 4px 0 0 var(--button-shadow-color);
    border-radius: var(--radius-control);
  }

  .btn-primary:hover {
    background-color: var(--button-hover-color);
  }

  .btn-primary:active {
    box-shadow: none;
    transform: translateY(4px);
  }

  .dark .btn-primary {
    @apply rounded-2xl h-14 px-8 text-lg font-bold transition-all;
    background-color: var(--button-color);
    color: var(--button-text-color);
    border-radius: var(--radius-control);
  }

  .dark .btn-primary:hover {
    background-color: var(--button-hover-color);
  }

  .dark .btn-primary:active {
    border-bottom: none;
    transform: translateY(4px);
  }

  .btn-play {
    @apply flex items-center justify-center rounded-full h-12 w-12 text-white transition-all;
    background-color: var(--success-color);
    box-shadow: 0 4px 0 0 var(--state-success-strong);
    border-radius: var(--radius-pill);
  }

  .btn-play:active {
    box-shadow: none;
    transform: translateY(4px);
  }

  .btn-retry {
    @apply flex items-center justify-center rounded-xl h-12 px-6 text-white text-sm font-bold uppercase tracking-wider transition-all;
    background-color: var(--warning-color);
    box-shadow: 0 4px 0 0 var(--state-warning-strong);
    border-radius: var(--radius-control);
  }

  .btn-retry:active {
    box-shadow: none;
    transform: translateY(4px);
  }

  .btn-delete {
    @apply p-3 rounded-full transition-all;
    border-radius: var(--radius-pill);
  }

  .btn-delete:hover {
    background-color: var(--surface-muted);
  }

  .dark .btn-delete {
    @apply flex items-center justify-center rounded-xl h-12 w-12 transition-all;
    background-color: var(--error-color);
    border-bottom: 4px solid var(--state-error-strong);
  }

  .dark .btn-delete:hover {
    background-color: var(--state-error-strong);
  }

  .dark .btn-delete:active {
    border-bottom: none;
    transform: translateY(4px);
  }

  /* 导航按钮样式 */
  .nav-button {
    @apply flex items-center justify-center rounded-full h-12 w-12 transition-colors;
    color: var(--inactive-icon-color);
  }

  .nav-button:hover {
    background-color: var(--surface-muted);
  }

  .nav-button.active {
    background-color: var(--background-color);
    color: var(--text-color);
  }

  .dark .nav-button {
    @apply flex items-center justify-center rounded-full h-12 w-12 transition-colors;
    color: var(--text-color);
  }

  .dark .nav-button:hover {
    background-color: var(--surface-muted);
  }

  .dark .nav-button.active {
    background-color: var(--surface-muted);
  }

  /* 导航容器样式 */
  .nav-container {
    @apply flex items-center justify-center gap-2 rounded-full p-2 shadow-lg border-2;
    background-color: var(--nav-container-background);
    border-color: var(--border-primary);
    border-radius: var(--radius-pill);
    box-shadow: var(--shadow-md);
  }

  .dark .nav-container {
    @apply flex items-center gap-2 rounded-full p-2 border shadow-lg backdrop-blur-sm;
    background-color: var(--nav-container-background);
    border-color: var(--border-color);
  }

  .player-subtitle-container {
    @apply space-y-6 overflow-y-auto pr-1;
    max-height: calc(100vh - 18rem);
  }

  .player-subtitle-container::-webkit-scrollbar {
    width: var(--scrollbar-width);
  }

  .player-subtitle-container::-webkit-scrollbar-track {
    background: var(--scrollbar-track-color);
  }

  .player-subtitle-container::-webkit-scrollbar-thumb {
    background: var(--scrollbar-thumb-color);
    border-radius: var(--scrollbar-border-radius);
  }

  .player-subtitle-container::-webkit-scrollbar-thumb:hover {
    background: var(--scrollbar-thumb-hover-color);
  }

  .subtitle-line {
    padding: 1rem;
    border-radius: 0.75rem;
    transition: background-color 0.3s ease;
    margin-bottom: 2rem;
  }

  .subtitle-line.highlight {
    background-color: var(--highlight-bg);
  }

  .player-subtitle-line {
    @apply flex flex-col gap-3 rounded-xl p-4 transition-colors duration-300;
  }

  .player-subtitle-line.highlight {
    background-color: var(--player-highlight-bg);
  }

  .word-group {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    margin-right: 0.25em;
    text-align: center;
  }

  .word-group ruby {
    display: inline-flex;
    flex-direction: column-reverse;
    line-height: 1.2;
  }

  .word-group rt {
    font-size: 0.8rem;
    color: var(--text-muted);
    user-select: none;
    opacity: 0.9;
  }

  .dark .word-group rt {
    color: var(--text-secondary);
    line-height: 1;
    transform: translateY(-0.2em);
  }

  .word-group rb {
    font-size: 1.8rem;
    font-weight: 700;
    line-height: 1.4;
    color: var(--text-color);
  }

  .dark .word-group rb {
    font-size: 1.75rem;
    font-weight: 500;
    line-height: 1.5;
  }

  .word-group .romaji-word {
    font-size: 0.9rem;
    color: #999;
    letter-spacing: 0.02em;
    margin-top: 0.1em;
    white-space: nowrap;
  }

  .dark .word-group .romaji-word {
    font-size: 0.8rem;
    color: #ccc;
    letter-spacing: 0.05em;
    line-height: 1;
    user-select: none;
  }

  .player-subtitle-words {
    @apply flex flex-wrap items-end gap-x-3 gap-y-4;
  }

  .player-word-group {
    @apply inline-flex flex-col items-center text-center;
  }

  .player-word-group ruby {
    @apply flex flex-col-reverse items-center leading-tight;
  }

  .player-word-surface {
    @apply text-2xl font-semibold leading-tight;
    color: var(--text-color);
  }

  .player-word-group rt {
    @apply text-xs uppercase tracking-wide;
    color: rgba(107, 114, 128, 0.85);
  }

  .dark .player-word-group rt {
    color: rgba(203, 213, 225, 0.75);
  }

  .player-romaji-word {
    @apply mt-1 text-xs uppercase tracking-widest text-gray-400;
    letter-spacing: 0.08em;
  }

  .dark .player-romaji-word {
    color: rgba(226, 232, 240, 0.7);
  }

  .player-word-group.active .player-word-surface {
    color: var(--player-accent-color);
  }

  .player-word-group.active {
    @apply rounded-lg px-2 py-1;
    background-color: rgba(92, 157, 82, 0.12);
  }

  .dark .player-word-group.active {
    background-color: rgba(45, 212, 191, 0.18);
  }

  .player-translation {
    @apply text-sm text-gray-500;
  }

  .dark .player-translation {
    color: rgba(226, 232, 240, 0.72);
  }

  .player-subtitle-plain {
    @apply text-xl font-semibold leading-relaxed;
    color: var(--stats-text-color);
  }

  .dark .player-subtitle-plain {
    color: var(--text-color);
  }

  .player-seek {
    @apply relative h-2 w-full cursor-pointer rounded-full transition-colors duration-200;
    background-color: var(--player-track-color);
  }

  .player-seek:hover {
    background-color: var(--player-hover-indicator);
  }

  .player-seek-progress {
    @apply absolute left-0 top-0 h-full rounded-full transition-all duration-150;
    background-color: var(--player-accent-color);
  }

  .player-seek-thumb {
    @apply absolute top-1/2 h-3 w-3 -translate-y-1/2 translate-x-1/2 rounded-full shadow-lg transition-transform duration-150;
    background-color: var(--player-thumb-fill);
    border: 2px solid var(--player-thumb-border);
  }

  .player-seek-thumb:hover {
    transform: translateY(-50%) translateX(50%) scale(1.05);
  }

  .player-seek-hover {
    @apply absolute top-1/2 h-2 w-2 -translate-y-1/2 translate-x-1/2 rounded-full;
    background-color: var(--player-hover-indicator);
  }

  .player-seek-tooltip {
    @apply absolute -top-8 -translate-x-1/2 rounded px-2 py-1 text-xs shadow-md;
    background-color: var(--player-accent-color);
    color: var(--player-tooltip-text);
  }

  .player-card {
    background-color: var(--player-card-bg);
    border: 2px solid var(--player-card-border);
    border-radius: var(--radius-card);
    box-shadow: var(--shadow-lg);
    padding: var(--space-card-padding-sm);
  }

  .dark .player-card {
    box-shadow: none;
    border-color: var(--player-card-border);
    border-width: 2px;
    border-bottom: 4px solid rgba(0, 0, 0, 0.2);
  }

  .player-control-surface {
    @apply flex flex-col gap-4;
    background-color: var(--player-card-bg);
    border: 2px solid var(--player-card-border);
    border-radius: var(--radius-card);
    box-shadow: var(--shadow-xl);
    padding: var(--space-card-padding-sm);
    gap: var(--space-md);
  }

  .settings-header {
    @apply text-center mb-10;
  }

  .settings-title {
    @apply text-3xl font-bold;
    color: var(--text-color);
  }

  .settings-section-title {
    @apply px-2 text-xl font-bold uppercase;
    color: rgba(92, 157, 82, 0.6);
  }

  .dark .settings-section-title {
    color: rgba(255, 247, 227, 0.6);
  }

  .settings-section-title {
    @apply text-xl font-bold uppercase mb-2 px-2;
    color: var(--text-color);
    opacity: 0.6;
  }

  /* 设置卡片 - 全新设计 */
  .settings-card {
    background-color: var(--card-background-color);
    border: 2px solid var(--settings-border-color);
    border-radius: var(--radius-card);
    box-shadow: var(--shadow-sm);
    overflow: hidden;
  }

  .dark .settings-card {
    border-bottom-width: 4px;
    box-shadow: none;
  }

  .settings-row {
    @apply flex items-center justify-between gap-4 px-4 py-4;
  }

  .settings-card .settings-row + .settings-row {
    border-top: 2px solid var(--settings-divider-color);
  }

  .dark .settings-card .settings-row + .settings-row {
    border-top: 2px solid rgba(229, 231, 235, 0.5);
  }

  .settings-row-content {
    @apply flex flex-col gap-1 text-left;
  }

  .settings-row-title {
    @apply font-bold text-lg;
    color: var(--text-color);
  }

  .settings-row-description {
    @apply text-sm;
    color: var(--settings-muted-color);
  }

  .settings-value {
    @apply text-sm;
    color: var(--settings-muted-color);
  }

  .settings-inline-controls {
    @apply flex items-center gap-2;
  }

  .settings-link {
    @apply flex items-center justify-between gap-3 px-4 py-4 transition-colors;
  }

  .settings-link:hover {
    background-color: rgba(92, 157, 82, 0.05);
  }

  .dark .settings-link:hover {
    background-color: rgba(255, 247, 227, 0.05);
  }

  /* 设置按钮组 */
  .settings-button-group {
    @apply inline-flex items-center gap-2;
  }

  .settings-button {
    @apply rounded-lg px-3 py-1 text-sm font-bold uppercase transition-all duration-200;
    color: rgba(74, 74, 74, 0.4);
    border: 2px solid var(--border-color);
    background-color: rgba(255, 255, 255, 0.4);
    box-shadow: 0 4px 0 var(--settings-shadow-color);
  }

  .settings-button:hover:not(.active) {
    @apply translate-y-[1px];
    background-color: rgba(92, 157, 82, 0.08);
  }

  .settings-button.active {
    color: var(--button-text-color);
    background-color: var(--player-accent-color);
    border-color: transparent;
  }

  .dark .settings-button {
    background-color: var(--card-background-color);
    color: rgba(255, 247, 227, 0.7);
  }

  .dark .settings-button:hover:not(.active) {
    background-color: rgba(255, 247, 227, 0.1);
  }

  /* 数字调整器 */
  .settings-number-adjuster {
    @apply flex items-center gap-2;
  }

  .settings-number-button {
    @apply p-2 rounded-full transition-colors;
    color: var(--settings-muted-color);
  }

  .settings-number-button:hover {
    background-color: rgba(92, 157, 82, 0.1);
  }

  .dark .settings-number-button:hover {
    background-color: rgba(255, 247, 227, 0.1);
  }

  .settings-number-value {
    @apply font-bold text-lg w-8 text-center;
    color: var(--text-color);
  }

  /* 账户信息卡片 */
  .settings-account-card {
    @apply flex flex-col gap-4 p-4;
  }

  .settings-account-header {
    @apply flex items-center gap-4;
  }

  .settings-account-avatar {
    @apply w-16 h-16 rounded-full border-2;
    border-color: var(--settings-border-color);
  }

  .settings-account-info {
    @apply flex flex-col gap-1;
  }

  .settings-account-name {
    @apply font-bold text-lg;
    color: var(--text-color);
  }

  .settings-account-label {
    @apply text-sm;
    color: var(--settings-muted-color);
  }

  .settings-progress-bar {
    @apply relative w-full h-4 overflow-hidden rounded-full bg-gray-200/50;
  }

  .dark .settings-progress-bar {
    background-color: rgba(255, 247, 227, 0.1);
  }

  .settings-progress-fill {
    @apply absolute inset-y-0 left-0 h-full rounded-full bg-primary transition-[width] duration-300 ease-out;
  }

  .settings-progress-text {
    @apply text-sm text-center mt-2;
    color: var(--settings-muted-color);
  }

  /* Pro 升级卡片 */
  .settings-pro-card {
    @apply p-6 text-center;
  }

  .settings-pro-icon {
    @apply text-5xl text-yellow-400 mb-4;
  }

  .settings-pro-title {
    @apply text-2xl font-bold mb-2;
    color: var(--text-color);
  }

  .settings-pro-description {
    @apply text-sm mb-6;
    color: var(--settings-muted-color);
  }

  .settings-pro-button {
    @apply w-full py-3 px-4 font-bold rounded-lg transition-all;
    background-color: var(--player-accent-color);
    color: var(--button-text-color);
    box-shadow: 0 4px 0 0 var(--settings-shadow-color);
  }

  .settings-pro-button:hover {
    background-color: var(--button-hover-color);
  }

  .settings-pro-button:active {
    box-shadow: none;
    transform: translateY(4px);
  }

  /* 响应式设计 */
  @media (max-width: 768px) {
    .settings-title {
      @apply text-2xl;
    }

    .settings-row {
      @apply px-3 py-3;
    }

    .settings-button {
      @apply px-2 py-1 text-xs;
    }
  }

  /* 文本样式 */
  .text-stats-label {
    @apply text-base font-bold;
    color: var(--secondary-text-color);
  }

  .dark .text-stats-label {
    @apply text-lg font-bold;
    color: var(--text-secondary);
  }

  .text-stats-value {
    @apply text-3xl font-black mt-2;
    color: var(--stats-text-color);
  }

  .text-file-name {
    @apply font-bold text-lg;
    color: var(--stats-text-color);
  }

  .text-file-status {
    @apply text-sm;
    color: var(--text-muted);
  }

  .dark .text-file-status {
    @apply text-sm;
    color: var(--text-secondary);
  }

  /* 加载动画 */
  .loading-spinner {
    @apply w-10 h-10 animate-spin rounded-full border-4 border-dashed;
    border-color: var(--color-info);
  }

  /* 状态图标 */
  .status-success {
    color: var(--state-success-text);
  }

  .status-warning {
    color: var(--state-warning-text);
  }

  .status-error {
    color: var(--state-error-text);
  }

  .status-processing {
    color: var(--state-info-text);
  }

  /* 统一滚动条样式 */
  .scrollbar-custom {
    overflow-y: auto;
  }

  .scrollbar-custom::-webkit-scrollbar {
    width: var(--scrollbar-width);
  }

  .scrollbar-custom::-webkit-scrollbar-track {
    background: var(--scrollbar-track-color);
  }

  .scrollbar-custom::-webkit-scrollbar-thumb {
    background: var(--scrollbar-thumb-color);
    border-radius: var(--scrollbar-border-radius);
  }

  .scrollbar-custom::-webkit-scrollbar-thumb:hover {
    background: var(--scrollbar-thumb-hover-color);
  }

  /* 可应用滚动条样式的基础类 */
  .scrollable {
    overflow-y: auto;
    overflow-x: hidden;
  }

  .scrollable::-webkit-scrollbar {
    width: var(--scrollbar-width);
  }

  .scrollable::-webkit-scrollbar-track {
    background: var(--scrollbar-track-color);
  }

  .scrollable::-webkit-scrollbar-thumb {
    background: var(--scrollbar-thumb-color);
    border-radius: var(--scrollbar-border-radius);
  }

  .scrollable::-webkit-scrollbar-thumb:hover {
    background: var(--scrollbar-thumb-hover-color);
  }
}
